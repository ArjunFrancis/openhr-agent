{
  "name": "openhr-agent",
  "version": "0.1.0",
  "description": "Personal AI agent that discovers your skills and hunts economic opportunities 24/7",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "tsc",
    "test": "vitest",
    "lint": "eslint src",
    "db:init": "psql -U postgres -c 'CREATE DATABASE IF NOT EXISTS openhr;' && psql -U postgres openhr < src/database/schema.sql"
  },
  "keywords": [
    "ai-agent",
    "economic-intelligence",
    "freelance",
    "opportunity-hunting",
    "skills-discovery",
    "autonomous-agent"
  ],
  "author": "Arjun Francis <contact@arjunfrancis.com>",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "pg": "^8.11.0",
    "playwright": "^1.40.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "nodemailer": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
